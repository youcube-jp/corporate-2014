!!! 5
%html
  %head
    %meta{charset: 'utf-8'}
    %meta{name: 'viewport', content: 'initial-scale=1.0,user-scalable=no'}
    %meta{name: 'description', content: current_page.data.description || '兵庫県三田市のWeb制作会社、合同会社ユーキューブのWebサイトです。'}
    %meta{property: 'og:title', content: current_page.data.title || '合同会社ユーキューブ'}
    %meta{property: 'og:description', content: current_page.data.description || '兵庫県三田市のWeb制作会社、合同会社ユーキューブのWebサイトです。'}
    %meta{property: 'og:url', content: "https://youcube.jp#{current_page.url}"}
    %meta{property: 'og:type', content: 'website'}
    %meta{property: 'og:image', content: image_url('icon1310.png')}
    %meta{property: 'og:locale', content: 'ja_JP'}
    %title= current_page.data.title.try{ |_| "#{_} | 合同会社ユーキューブ" } || '兵庫県三田市のWeb制作会社、合同会社ユーキューブ'
    = javascript_include_tag 'dependencies', 'application'
    = stylesheet_link_tag 'application'
    %link{rel: 'author', href: 'http://google.me/+YuNakanishi'}
    %link{rel: 'icon', type: 'image/png', href: image_path('icon32.png')}
    %link{rel: 'apple-touch-icon', type: 'image/png', href: image_path('icon180.png')}
  %body
    .container
      %header
        %nav.navbar.navbar-default{role: 'navigation'}
          .navbar-header
            %button.navbar-toggle.collapsed{type: 'button', data: {toggle: 'collapse', target: '#header-navbar-collapse'}}
              %span.sr-only MENU
              %span.icon-bar
              %span.icon-bar
              %span.icon-bar
            = link_to(image_tag('title.png', alt: '合同会社ユーキューブ', width: 180, height: 45), '/', class: 'navbar-brand')
          #header-navbar-collapse.collapse.navbar-collapse.navbar-right
            %ul.nav.navbar-nav
              = activity_list(icon('home', 'ホーム'), '/', class: 'hidden-sm')
              = activity_list(icon('cubes', '事業内容'), '/works/')
              = activity_list(icon('file-text-o', 'おしらせ'), '/announcements/')
              = activity_list(icon('bullhorn', '代表挨拶'), '/message/')
              = activity_list(icon('question-circle', 'お問い合わせ'), '/contact/')
      = yield
      %footer
        %div YouCube LLC.
        %div
          = link_to '会社概要', '/company/'
          = '-'
          = link_to 'プライバシーポリシー', '/privacy/'
